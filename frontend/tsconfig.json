{
	"compilerOptions": {
		"jsx": "preserve",

		"module": "esnext",
		"moduleResolution": "node16",

		"strict": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,

		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,

		"paths": {
			"$/*": [
				"./src/*"
			]
		}
	},
	"exclude": ["dist/"]
}
